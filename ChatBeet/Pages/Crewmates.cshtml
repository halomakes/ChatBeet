@page
@model ChatBeet.Pages.CrewmatesModel
@{
    ViewBag.Title = "Crewmates";
    var sequence = new List<int> { 5, 6, 4, 7, 3, 8, 2, 9, 1 };
    var pairs = Model.Ranks.Zip(sequence.Take(Model.Ranks.Count()));
}
<h1 class="mb-5">Most Suspicious Crewmates</h1>
<div class="crewmates-bg">
    <div class="crewmate-rankings">
        @foreach (var pair in pairs)
        {
            <div class="crewmate" style="order: @pair.Second">
                <partial name="_Crewmate" model="pair.First.Color" />
                <span>@pair.First.User.DisplayName() <br />@pair.First.Level</span>
            </div>
        }
    </div>
</div>